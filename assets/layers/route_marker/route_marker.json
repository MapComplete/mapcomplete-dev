        {
          "if": "hiking=yes",
          "ifnot": "hiking=",
          "then": {
            "en": "This is a route marker for a hiking route."
          }
        },
        {
          "if": "mtb=yes",
          "ifnot": "mtb=",
          "then": {
            "en": "This is a route marker for a mountain bike route."
          }
        },
        {
          "if": "horse=yes",
          "ifnot": "horse=",
          "then": {
            "en": "This is a route marker for a horse riding route."
          }
        },
        {
          "if": "ski=yes",
          "ifnot": "ski=",
          "then": {
            "en": "This is a route marker for a ski route."
          }
        }
      ]
    }
  ],
