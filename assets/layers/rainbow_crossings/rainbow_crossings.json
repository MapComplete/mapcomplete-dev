    {
      "title": {
        "en": "a crossing",
        "de": "einen Überweg",
        "nl": "een oversteekplaats",
        "fr": "un passage",
        "ca": "un creuament"
      },
      "tags": [
        "highway=footway",
        "footway=crossing"
      ],
      "description": {
        "en": "Pedestrian crossing",
        "de": "Fußgängerüberweg",
        "nl": "Voetgangersoversteekplaats",
        "fr": "Passage piéton",
        "ca": "Pas de vianants"
